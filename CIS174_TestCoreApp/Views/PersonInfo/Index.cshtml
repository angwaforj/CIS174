
    @model ICollection<CIS174_TestCoreApp.ViewModel.PersonSummaryViewModel>
   
    <h2>Person Summary</h2>
    <hr/>
    <div class="table-responsive">
        <table class="table table-striped person">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Number of Accomplishments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@person.NumberOfAccomplishments</td>
                        <td><a asp-action="View" asp-route-id="@person.PersonId" class="btn btn-primary">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="Create" class="btn btn-success">Create new Person</a>